{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Props Schema",
  "description": "Schema for prop assets in the Anamalia Prompt Assembler",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Unique identifier in snake_case"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "category": {
      "type": "string",
      "enum": ["tabletop", "held", "grounded", "decorative", "functional"],
      "description": "Prop category"
    },
    "held_or_grounded": {
      "type": "string",
      "enum": ["held", "grounded", "both"],
      "description": "How the prop is positioned"
    },
    "descriptor": {
      "type": "string",
      "minLength": 10,
      "description": "Textual description for prompt generation"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    }
  },
  "required": ["id", "version", "category", "held_or_grounded", "descriptor"],
  "additionalProperties": false
}
